// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Watchlist {
  id     Int     @id @default(autoincrement())
  movies Movie[]
}

model Movie {
  tmdbId      Int        @unique
  title       String
  year        Int
  poster      String
  Watchlist   Watchlist? @relation(fields: [watchlistId], references: [id])
  watchlistId Int?
}
