datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  watchlist Watchlist?
}

model Watchlist {
  id     Int      @id @default(autoincrement())
  user   User     @relation(fields: [userId], references: [id])
  movies Movie[]
}

model Movie {
  tmdbId  Int      @unique
  title   String
  year    Int
  poster  String
}
